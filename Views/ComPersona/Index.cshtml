@model IEnumerable<Cuidados.Caninos.Marcos.Montiel.Models.ComPersona>

@{
    ViewData["Title"] = "Persona";
}

<h2>Persona</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.APaterno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AMaterno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Curp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaNac)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.ComCatEscolaridad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComCatSexo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.APaterno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AMaterno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNac.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComCatEscolaridad.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComCatSexo.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
